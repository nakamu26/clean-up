<%= render "shared/second-header"%>

<div class='devise-main'>
<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <%= render "shared/error_messages", model: f.object %>

  <h1 class='devise-title'>新規登録</h1>

  <div class="field">
    <label class='form-text'>名前</label><br />
    <%= f.text_field :name, class:"input-default", autofocus: true %>
  </div>

  <div class="field">
    <label class='form-text'>Eメール</label><br />
    <%= f.email_field :email, class:"input-default" %>
  </div>

  <div class="field">
    <label class='form-text'>パスワード</label>
    <em>(英数字6文字以上)</em><br />
    <%= f.password_field :password, class:"input-default", autocomplete: "off" %>
  </div>

  <div class="field">
    <label class='form-text'>パスワード</label>
    <em>(確認用)</em><br />
    <%= f.password_field :password_confirmation, class:"input-default", autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "登録" %>
  </div>
<% end %>
</div>