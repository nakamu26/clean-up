<%= render "shared/second-header"%>

<div class='devise-main'>
<%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>

  <h1 class='devise-title'>ログイン</h1>

  <div class="field">
    <label class='form-text'>Eメール</label><br />
    <%= f.email_field :email, class:"input-default", autofocus: true %>
  </div>

  <div class="field">
    <label class='form-text'>パスワード</label><br />
    <%= f.password_field :password, class:"input-default", autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>
</div>
