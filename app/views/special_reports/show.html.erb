<%= render "shared/header" %>

<div class='report-show'>
  <% if user_signed_in? && current_user.id == @special_report.user_id %>
    <div class='edit-btn'>
      <%= link_to '編集する', edit_special_report_path(@special_report.id), method: :get, class: "form" %>
    </div>
  <% end %>
  <div class='report-show-contents'>
    <div class='report-image'>
      <% if @special_report.image.present? %>
        <%= image_tag @special_report.image ,class:"report-box-img" %>
      <% else %>
        <div class='report-message'>写真はありません</div>
      <% end %>
    </div>
    <div class='report-text'>
      <div class='report-info'>収集地域:<%= @special_report.location.name %></div>
      <div class='report-info'>種別:<%= @special_report.category.name %></div>
      <div class='report-info'>地点:<%= @special_report.point %></div>
      <% if @special_report.comment.present? %>
        <div class='report-info-attention'>補足事項:<%= @special_report.comment %></div>
      <% end %>
      <div class='report-info'>報告者:<%= @special_report.user.name %></div>
    </div>
  </div>

</div>
