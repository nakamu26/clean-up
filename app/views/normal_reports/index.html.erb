<%= render "shared/header" %>

<div class='main'>
  <div class='form-area'>
    <%= link_to '報告投稿', new_normal_report_path, class: "form" %>
    <%= link_to '特記事項投稿', new_special_report_path, class: "form" %>
    <%= link_to '不法物投稿', '#', class: "form" %>
  </div>

  <div class='report-contents'>
    <div class='reports-area'>
      <div class='title'>報告</div>
      <ul>
         <% if @normal_reports.length != 0 %>
          <%= render partial: "normal_report", collection: @normal_reports %>
        <% else %>
        <li class='list'>
            <div class='report-info'>報告はまだありません</div>
        </li>
        <% end %>
      </ul>
    </div>
    <div class='reports-area'>
      <div class='title'>特記事項</div>
      <ul>
        <% if @special_reports.length != 0 %>
          <%= render partial: "special_report", collection: @special_reports %>
        <% else %>
        <li class='list'>
            <div class='report-info'>特記事項はまだありません</div>
        </li>
        <% end %>
      </ul>
    </div>
    <div class='reports-area'>
      <div class='title'>不法物</div>
      <ul>
        <li class='list'>
          <%= link_to "#" do %>
            <div class='report-info'>猫実</div>
            <div class='report-info'>自転車屋の通り</div>
            <div class='report-info'>ソファ</div>
            <div class='report-info'>田中</div>
            <div class='report-info-attention'>写真あり</div>
            <div class='report-info-attention'>コメントあり</div>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>